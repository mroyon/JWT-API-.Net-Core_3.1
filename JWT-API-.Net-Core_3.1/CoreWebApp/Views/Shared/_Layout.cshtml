<!DOCTYPE html>
@using Microsoft.AspNetCore.Authorization
@using CoreWebApp.InAppResources
@inject IAuthorizationService AuthorizationService
@inject CoreWebApp.Services.LocalizeService SharedLocalizer

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreWebApp</title>
    <link rel="stylesheet" href="~/css/vendor.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fontawesome-free-5.4.1-web/css/all.min.css" asp-append-version="true" />
    <script src="~/lib/signalr/dist/browser/signalr.js" sp-append-version="true"></script>
</head>
<body>

    <div>
        <nav class="bg-dark mb-4 navbar navbar-dark navbar-expand-md">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <em>Core 3.1 Web App V1.0</em>
                </a>
                <button aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#topNavbarCollapse" data-toggle="collapse" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="topNavbarCollapse">
                    <ul class="mr-auto navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("HOME")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">@SharedLocalizer.GetLocalizedHtmlString("PRIVACY")</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </div>

    <div class="container body-content">

        @RenderBody()

    </div>

    <footer>
        <hr />
        <nav class="navbar transparent navbar-inverse">
            <div class="container">
                &copy; 2020 - CoreWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
            
        </nav>
    </footer>

    <script src="~/js/vendor.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>

